[Unit]
Description=Jukebox Kiosk Screen (Chromium)
After=graphical.target jukebox_api.service
Wants=jukebox_api.service

[Service]
Type=simple
User=user
Environment=DISPLAY=:0
Environment=XAUTHORITY=/home/user/.Xauthority
WorkingDirectory=/home/user/nowplaying
ExecStart=/home/user/nowplaying/kiosk.sh
Restart=on-failure
RestartSec=3

[Install]
WantedBy=graphical.target